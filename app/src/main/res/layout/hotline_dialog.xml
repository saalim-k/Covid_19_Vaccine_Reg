<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivHotline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hotline" />

    <TextView
        android:id="@+id/tvCallHotlineHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Call the numbers below"
        app:layout_constraintTop_toBottomOf="@id/ivHotline"
        app:layout_constraintStart_toStartOf="@id/ivHotline"
        app:layout_constraintEnd_toEndOf="@id/ivHotline"/>

    <TableLayout
        android:id="@+id/tlHotlineCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/tvCallHotlineHeader"
        app:layout_constraintStart_toStartOf="@id/tvCallHotlineHeader"
        app:layout_constraintTop_toBottomOf="@id/tvCallHotlineHeader">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tvHotline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="0388810200"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCallHotline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/call_now" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tvHotline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="0388810600"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCallHotline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/call_now" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tvHotline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="0388810700"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCallHotline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/call_now" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>